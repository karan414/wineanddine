<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="6">

    <EditText
        android:id="@+id/add_item_cat"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:gravity="center"
        android:inputType="text"
        android:layout_gravity="center|bottom"
        android:hint="Enter item category"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/add_item_subcat"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:gravity="center"
        android:inputType="text"
        android:layout_gravity="center"
        android:hint="Enter item sub-category"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/add_item_name"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:gravity="center"
        android:inputType="text"
        android:layout_gravity="center"
        android:hint="Enter item name"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/add_item_desc"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:gravity="center"
        android:inputType="text"
        android:layout_gravity="center"
        android:hint="Enter item description"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/add_item_price"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:gravity="center"
        android:inputType="number"
        android:layout_gravity="center"
        android:hint="Enter item price"
        android:textSize="18sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/add_item_addbtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rounded_edge"
            android:layout_marginRight="5dp"
            android:textSize="18sp"
            android:text="Add"/>

        <Button
            android:id="@+id/add_item_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_edge"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="18sp"
            android:text="Cancel"/>

    </LinearLayout>
</LinearLayout>
